@import 'nib'

color1 = #41afcb

text = #fff
faded_text = #7fcce0

body, input
  font-family 'Open Sans', sans-serif;
  color faded_text

a
  color text
  cursor pointer

  &:hover
    text-decoration underline

body
  margin 0
  padding 0
  background color1

header
  padding 50px

  h1
    display block
    margin auto
    width 108px
    height 34px

    image '/logo.png' 108px 34px


main
  padding 20px

form
  text-align center

  > div
    margin-bottom 10px

  label
    display inline-block
    width 120px

  input
    padding 10px
    font-size 14px
    text-align center

    &:focus
      outline-width 0

    &[type=text], &[type=password]
      width 200px
      color #fff
      background transparent
      border 1px solid faded_text

      &::-webkit-input-placeholder
        color faded_text

      &:focus
        color #fff
        border-color #fff

    &[type=submit]
      background #fff
      border none
      font-weight 600
      color color1
      box-shadow 0 1px 2px rgba(0, 0, 0, 0.3)

p
  color faded_text
  text-align center


